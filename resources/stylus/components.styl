.animate__bounceOut
    animation-fill-mode forwards

.animate__bounceIn
    animation-fill-mode forwards


.ds_window
    width 80%
    height 80vh
    backdrop-filter blur(15px)
    background #f4f4f4
    border-radius 7px
    position relative
    margin auto
    top 30px
    left 0
    right 0
    bottom 0
    z-index 2

@supports (backdrop-filter blur(15px))
    .ds_window
        width 80%
        height 80vh
        backdrop-filter blur(15px)
        background #f4f4f4
        border-radius 7px
        position relative
        margin auto
        top 30px
        left 0
        right 0
        bottom 0
        z-index 2

.gallery
    display grid
    grid-template-columns repeat(5, 1fr)
    grid-template-rows repeat(5,10vw)
    grid-gap 15px
.gallery__img
    width :100%
    height 100%
    object-fit cover

.col-10::-webkit-scrollbar
    width 10px

.col-10::-webkit-scrollbar-thumb
    -webkit-border-radius: 10px
    border-radius: 10px
    background: #585353


// spinner
.preloader
    position: absolute
    z-index: 3
    margin: auto
    scale: 0.7
.dim-contents
    position: absolute
    z-index: 3
    width: 100%
    height: 100%
    background: #f4f4f4
    margin-left: -13px
    transform: translate(22em, 12em);
